{
  "name": "finanzas-personales-back-hono",
  "version": "1.1.0",
  "description": "Backend para sistema de finanzas personales con Hono + Turso + Drizzle",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "bun build src/worker.ts --outdir dist",
    "build:local": "bun build src/index.ts --outdir dist",
    "start": "bun run dist/index.js",
    "db:push": "bunx drizzle-kit push",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:seed": "bun run src/db/seed.ts",
    "deploy": "bunx wrangler deploy"
  },
  "keywords": ["hono", "turso", "drizzle", "finanzas", "api"],
  "author": "TerioDev",
  "license": "MIT",
  "dependencies": {
    "@hono/zod-openapi": "^1.1.3",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.9.22",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.3",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.7",
    "zod": "^3.23.8",
    "zod-to-openapi": "^0.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "drizzle-kit": "^0.24.2"
  }
}